#include <iostream>
#include <string>
#include <vector>
#include <cstring>

// Include ImGui และ Backend
#include "imgui.h"
#include "imgui_impl_glfw.h"
#include "imgui_impl_opengl3.h"
#include <GLFW/glfw3.h>

// --- [ส่วนที่ 1: สมองของบอท (Logic Class)] ---
class ChatbotLogic {
public:
    int state = -1; // -1: ถามชื่อ, 0: เมนูหลัก, 1: Admission, 2: Freshman, 3: General
    std::string userName;
    std::vector<std::string> chatHistory;

    ChatbotLogic() {
        chatHistory.push_back("Chatbot: สวัสดีครับ! ขอทราบชื่อของคุณหน่อยครับ");
    }

    void processInput(std::string input) {
        if (input.empty()) return;
        chatHistory.push_back("User: " + input);

        // ด่านที่ 1: รับชื่อ (เหมือนเวอร์ชัน Terminal)
        if (state == -1) {
            userName = input;
            state = 0;
            chatHistory.push_back("Chatbot: ยินดีที่ได้รู้จักครับ คุณ " + userName + "!");
            addMenuMessage();
            return;
        }

        // ด่านที่ 2: เลือกเมนูหลัก (1-3)
        if (state == 0) {
            if (input == "1") { 
                state = 1; 
                chatHistory.push_back("Chatbot: --- เข้าสู่โหมด Admission ---");
                chatHistory.push_back("Chatbot: อยากทราบเรื่อง 'รอบรับ', 'คะแนน', 'เครื่องกล' หรือ 'คอมพิวเตอร์' ครับ?");
            } 
            else if (input == "2") { 
                state = 2; 
                chatHistory.push_back("Chatbot: ยินดีด้วยนะลูกช้างใหม่! ข้อมูลตารางสอนจะประกาศเร็ว ๆ นี้ครับ");
                state = 0; // ทำงานเสร็จแล้วกลับมาเมนูหลัก
                addMenuMessage();
            } 
            else if (input == "3") { 
                state = 3; 
                chatHistory.push_back("Chatbot: มีเรื่องอะไรที่อยากทราบเป็นพิเศษไหมครับ? พิมพ์ถามได้เลย!");
                state = 0;
                addMenuMessage();
            } 
            else {
                chatHistory.push_back("Chatbot: กรุณาเลือกตัวเลข 1, 2 หรือ 3 เท่านั้นครับ");
            }
            return;
        }

        // ด่านที่ 3: จัดการ Keyword ในโหมด Admission (ใช้ Pointer ตาม Lecture 16)
        if (state == 1) {
            if (input == "ออก") {
                state = 0;
                chatHistory.push_back("Chatbot: กลับสู่เมนูหลักครับ");
                addMenuMessage();
                return;
            }

            // ใช้ Vector เก็บ Keyword (Lecture 17)
            std::vector<std::string> keywords = {"รอบรับ", "คะแนน", "เครื่องกล", "คอมพิวเตอร์"};
            const char *responses[] = {
                "คณะเราเปิดรับ 3 รอบหลักครับ...",
                "คะแนนย้อนหลังดูได้ที่เว็บไซต์ reg.cmu.ac.th",
                "วิศวะเครื่องกลเน้นการออกแบบเครื่องจักรและพลังงาน",
                "วิศวะคอมฯ เรียนทั้ง Hardware, Software และ AI"
            };

            bool found = false;
            for (size_t i = 0; i < keywords.size(); i++) {
                if (input.find(keywords[i]) != std::string::npos) {
                    chatHistory.push_back("Chatbot: " + std::string(*(responses + i)));
                    found = true;
                    break;
                }
            }
            if (!found) chatHistory.push_back("Chatbot: ไม่พบข้อมูล ลองถามเรื่อง 'รอบรับ' หรือพิมพ์ 'ออก'");
        }
    }

private:
    void addMenuMessage() {
        chatHistory.push_back("-------------------------");
        chatHistory.push_back("Chatbot: กรุณาเลือกสถานะของคุณ:");
        chatHistory.push_back("[1] สนใจเข้าเรียน (Admission)");
        chatHistory.push_back("[2] นักศึกษาใหม่ปี 1 (Freshman)");
        chatHistory.push_back("[3] ถามตอบทั่วไป (General Q&A)");
        chatHistory.push_back("-------------------------");
    }
};

// --- [ส่วนที่ 2: ฟังก์ชันหลัก (GUI Setup)] ---
int main() {
    if (!glfwInit()) return 1;
    GLFWwindow* window = glfwCreateWindow(600, 800, "ENGR CMU Chatbot (GUI Version)", NULL, NULL);
    glfwMakeContextCurrent(window);

    IMGUI_CHECKVERSION();
    ImGui::CreateContext();

    // 1. ดึง IO ของ ImGui มาจัดการเรื่อง Font
ImGuiIO& io = ImGui::GetIO();

// 2. โหลดไฟล์ Font ภาษาไทย (เช่น Tahoma, Arial หรือ TH Sarabun) 
// ต้องระบุ Path ที่อยู่ของไฟล์ .ttf ในเครื่องคุณ (ปกติ Windows จะอยู่ที่ C:/Windows/Fonts/)
io.Fonts->AddFontFromFileTTF("C:\\Windows\\Fonts\\tahoma.ttf", 18.0f, NULL, io.Fonts->GetGlyphRangesThai());

// 3. (Optional) หากคุณมีไฟล์ Font ในโฟลเดอร์โปรเจค ก็ระบุชื่อไฟล์ได้เลย
// io.Fonts->AddFontFromFileTTF("THSarabunNew.ttf", 20.0f, NULL, io.Fonts->GetGlyphRangesThai());

    ImGui_ImplGlfw_InitForOpenGL(window, true);
    ImGui_ImplOpenGL3_Init("#version 130");

    // จองพื้นที่ใน Heap สำหรับสมองบอท (Lecture 17)
    ChatbotLogic *brain = new ChatbotLogic();
    static char inputBuffer[256] = "";

    while (!glfwWindowShouldClose(window)) {
        glfwPollEvents();
        ImGui_ImplOpenGL3_NewFrame();
        ImGui_ImplGlfw_NewFrame();
        ImGui::NewFrame();

        // ตั้งค่าหน้าต่างแชทให้เต็มจอ
        ImGui::SetNextWindowPos(ImVec2(0, 0));
        ImGui::SetNextWindowSize(ImGui::GetIO().DisplaySize);
        ImGui::Begin("Chatbot Console", NULL, ImGuiWindowFlags_NoTitleBar | ImGuiWindowFlags_NoResize);

        // แสดงประวัติการสนทนา
        ImGui::BeginChild("ChatRegion", ImVec2(0, -ImGui::GetFrameHeightWithSpacing() * 2));
        for (const auto& log : brain->chatHistory) {
            ImGui::TextWrapped("%s", log.c_str());
        }
        if (ImGui::GetScrollY() >= ImGui::GetScrollMaxY()) ImGui::SetScrollHereY(1.0f);
        ImGui::EndChild();

        ImGui::Separator();

        // ช่องรับข้อมูล
        if (ImGui::InputText("##Input", inputBuffer, 256, ImGuiInputTextFlags_EnterReturnsTrue)) {
            brain->processInput(inputBuffer);
            memset(inputBuffer, 0, sizeof(inputBuffer));
            ImGui::SetKeyboardFocusHere(-1); 
        }
        ImGui::SameLine();
        ImGui::TextDisabled("(กด Enter)");

        ImGui::End();

        ImGui::Render();
        ImGui_ImplOpenGL3_RenderDrawData(ImGui::GetDrawData());
        glfwSwapBuffers(window);
    }

    // คืนพื้นที่หน่วยความจำ (Lecture 17)
    delete brain;
    brain = NULL;

    ImGui_ImplOpenGL3_Shutdown();
    ImGui_ImplGlfw_Shutdown();
    ImGui::DestroyContext();
    glfwDestroyWindow(window);
    glfwTerminate();

    return 0;
}
